<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_76"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/image_item_track"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_item_track_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_10"
        android:ellipsize="end"
        android:gravity="left|center"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_item_track"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_item_track_user"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_10"
        android:ellipsize="end"
        android:gravity="left|center"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_item_track"
        app:layout_constraintTop_toBottomOf="@+id/text_item_track_name" />

</android.support.constraint.ConstraintLayout>
