<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_56">

    <ImageView
        android:id="@+id/small_image_track"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/small_track_next"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_skip_next" />

    <ImageButton
        android:id="@+id/small_track_play_pause"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/small_track_next"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_track_play_pause" />

    <ImageButton
        android:id="@+id/small_track_previous"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/small_track_play_pause"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_skip_previous" />

    <TextView
        android:id="@+id/small_track_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:gravity="left|center"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/small_track_previous"
        app:layout_constraintStart_toEndOf="@+id/small_image_track"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/small_track_user"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:gravity="left|center"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/small_track_previous"
        app:layout_constraintStart_toEndOf="@+id/small_image_track"
        app:layout_constraintTop_toBottomOf="@+id/small_track_name" />

</android.support.constraint.ConstraintLayout>
